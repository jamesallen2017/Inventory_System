@model GMCINVENTORYSYSTEM.Models.AllModels
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .form-control[readonly] {
        background-color: white;
    }

    td {
        word-break: break-word;
    }

        td.center {
            text-align: center;
        }

    .table > thead > tr > th, .table > thead > tr > td {
        vertical-align: bottom;
