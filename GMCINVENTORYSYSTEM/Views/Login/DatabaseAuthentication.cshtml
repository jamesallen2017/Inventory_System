@model GMCINVENTORYSYSTEM.Models.AllModels
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    @Styles.Render("~/loginbundles/Content")
    <style>
    </style>
</head>
<body class="login2">
    <div>
        <div class="login" id="logindiv">
            <div class="text-center logo">
                <img src="~/assets/images/General Milling Corporation Logo.jpg" alt="logo">
            </div>

            @using (Html.BeginForm("DatabaseAuthentication", "Login", FormMethod.Post, new { @id = "formvalidationtooltip", @class = "loginForm", @role = "form" }))
            {
                @Html.AntiForgeryToken()


                <div class="form-group">
                    <div class="input-icon">
                        @Html.TextBoxFor(Maintenance => Maintenance.Maintenance.AdminUser, new { @class = "form-control validate[required]", @placeholder = "Admin Login.", @autocomplete = "off" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="input-icon">
                        @Html.PasswordFor(Maintenance => Maintenance.Maintenance.AdminPassword, new { @class = "form-control validate[required]", @placeholder = "Admin Password." })
                    </div>
                </div>

                <div class="form-group">
                    <div class="input-icon">
                        @Html.TextBoxFor(Maintenance => Maintenance.Maintenance.DatabaseConnection, new { @class = "form-control validate[required]", @placeholder = "Server Name...", @autocomplete = "off" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="input-icon">
                        @Html.TextBoxFor(Maintenance => Maintenance.Maintenance.DatabaseUser, new { @class = "form-control validate[required]", @placeholder = "Server Login.", @autocomplete = "off" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="input-icon">
                        @Html.PasswordFor(Maintenance => Maintenance.Maintenance.DatabasePassword, new { @class = "form-control validate[required]", @placeholder = "Server Password." })
                    </div>
                </div>

                <div class="clearfix">
                    <button type="submit" id="btnLogin" class="btn btn-primary btn-block">LOGIN</button>
                    <a id="btnLogin" class="btn btn-danger btn-block" href="@Url.Action("LoginAuthentication","Login")">BACK</a>
                </div>
            }

        </div>

    </div>
    @Scripts.Render("~/loginbundles/jquery")

    @if (ViewBag.HeaderError != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                $.toast({
                    heading: "@ViewBag.HeaderError",
                    text: "@ViewBag.MessageError",
                    showHideTransition: 'slide',
                    autoHideDelay: 3000,
                    icon: 'error',
                    position: 'top-right',
                    bgColor: '#FF4859'
                });
            };
        </script>
    }
    else if (ViewBag.HeaderSuccess != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                $.toast({
                    heading: "@ViewBag.HeaderSuccess",
                    text: "@ViewBag.MessageSuccess",
                    showHideTransition: 'slide',
                    icon: 'success',
                    autoHideDelay: 3000,
                    position: 'top-right',
                    bgColor: '#7EC857'
                });
            };
        </script>
    }
</body>
</html>
